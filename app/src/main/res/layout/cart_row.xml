<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorCard"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productCartIV"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/cartproductimage" />

        <TextView
            android:id="@+id/productNameCartTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/productCartIV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productDiscountPriceCartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTextLight"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/productCartIV"
            app:layout_constraintTop_toBottomOf="@+id/productNameCartTV" />

        <TextView
            android:id="@+id/productPriceCartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/colorTextLight"
            app:layout_constraintStart_toEndOf="@+id/productDiscountPriceCartTV"
            app:layout_constraintTop_toBottomOf="@+id/productNameCartTV" />

        <TextView
            android:id="@+id/productNumberCartTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorTextLight"
            app:layout_constraintStart_toEndOf="@+id/productCartIV"
            app:layout_constraintTop_toBottomOf="@+id/productPriceCartTV" />
        <TextView
            android:id="@+id/productCartVariantTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/colorTextLight"
            app:layout_constraintStart_toEndOf="@+id/productCartIV"
            app:layout_constraintTop_toBottomOf="@+id/productNumberCartTV"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>